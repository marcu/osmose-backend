<analyser>
    <class>
        <id>1203</id>
        <item>1403</item>
        <level>3</level>
        <title>Description de mon analyser</title>
    </class>
    <requests>
        <request>
            <name>emprise_gare</name>
            <from>relations_polygon</from>
            <obj>relation</obj>
            <geom>polygon</geom>
            <filter>
                <and>
                    <has_tag>public_transport</has_tag>
                    <key_value>public_transport=stop_area</key_value>
                    <has_tag>network</has_tag>
                    <or>
                        <key_value>network=Transilien</key_value>
                        <key_value>network=SNCF</key_value>
                    </or>
                </and>
            </filter>
        </request>
        <request>
            <name>emprise_gare_buffer_150</name>
            <from>emprise_gare</from>
            <obj>relation</obj>
            <geom>polygon</geom>
            <buffer>150</buffer>
        </request>
        <request>
            <name>end</name>
            <from>nodes</from>
            <obj>node</obj>
            <geom>point</geom>
            <filter>
                <and>
                    <or>
                        <key_value>highway=bus_stop</key_value>
                        <key_value>highway=platform</key_value>
                    </or>
                    <or>
                        <has_not_tag>name</has_not_tag>
                        <has_tag>name</has_tag>
                    </or>
                    <intersects>emprise_gare_buffer_150</intersects>
                </and>
            </filter>
        </request>
    </requests>
</analyser>